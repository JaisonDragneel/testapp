<h2>Listing all the users registered on the website</h2>

<table class = "table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users = User.all %>
    <% @users.each do |user| %>
      <% if !(current_user.username == user.username) %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
